<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão para usar a câmera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Recurso de câmera, mas não obrigatório -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperID"
        tools:targetApi="31">

        <activity
            android:name=".auth.ResetMasterPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_reset_master_password"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".auth.RecoverMasterPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_recover_master_password"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".auth.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".main.EditPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_password"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".main.AddPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_add_password"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".main.QrScannerActivity"
            android:exported="false"
            android:label="@string/title_activity_qr_scanner"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".main.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".user.EditCategoriesActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_categories"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".user.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".user.TermsOfUseActivity"
            android:exported="false"
            android:label="@string/title_activity_terms_of_use"
            android:theme="@style/Theme.SuperID" />
        <activity
            android:name=".user.WelcomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SuperID">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
